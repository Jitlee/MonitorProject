<controls:ChildWindow
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
		   x:Class="MonitorSystem.Controls.ImagesManager.InputNameWindow">
    <StackPanel x:Name="LayoutRoot" Margin="2" Orientation="Horizontal">
		<TextBlock Margin="5" VerticalAlignment="Center">
			<Run x:Name="SubTitleRun"/>
		</TextBlock>
		<TextBox x:Name="ValueTextBox" Width="200" Margin="5" VerticalAlignment="Center" MaxLength="64" TextChanged="ValueTextBox_TextChanged" KeyDown="ValueTextBox_KeyDown"/>
		<Button x:Name="OKButton" Content="确定" IsEnabled="False" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" VerticalAlignment="Center" d:LayoutOverrides="Height" Margin="5" />
	</StackPanel>
</controls:ChildWindow>