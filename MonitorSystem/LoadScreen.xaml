<UserControl x:Class="MonitorSystem.LoadScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"  d:DesignHeight="400" d:DesignWidth="500" 
             xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
             MouseMove="Content_MouseMove">
    <Grid x:Name="LayoutRoot">
        
        <Grid x:Name="Content"  Background="#A0A0A0" ShowGridLines="False" Margin="0">
            <Grid.RowDefinitions >
                <RowDefinition Height="35"  />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Canvas  Background="#e5eff8" Grid.Row="0">
                <CheckBox Canvas.Left="13" Canvas.Top="10" Content="组态" Height="16" Name="checkBox1"  Click="checkBox1_Click" />
                <Button Canvas.Left="80" Canvas.Top="7" Content="保存" Height="23" Name="btnSave" Width="75" />
                <sdk:Label Canvas.Left="291" Canvas.Top="10" Height="21" Name="label1" Width="141" />
                <Button Canvas.Left="331" Canvas.Top="8" Content="Button" Height="20" Name="button1" Width="88" Click="button1_Click" />
            </Canvas>
            <Canvas Grid.Row="1" x:Name="csScreen" Background="Beige">
                <Rectangle   Height="57" Name="RC" Stroke="Black" Visibility="Collapsed" StrokeThickness="1"  Width="191" />
            </Canvas>
        </Grid>
    </Grid>
</UserControl>
