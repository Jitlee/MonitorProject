<DataTemplate x:Name="DateTimeCell" xmlns='http://schemas.microsoft.com/client/2007'
			  xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml'>
	<Grid>
		<TextBlock HorizontalAlignment="@HorizontalAlignment@" Text="{Binding @Text@, Converter={StaticResource DateTimeFormat}, ConverterParameter='@DateTimeFormat@'}" FontFamily='Trebuchet MS' FontSize='11' Margin='5,4,5,4'/>
	</Grid>
</DataTemplate>

	
